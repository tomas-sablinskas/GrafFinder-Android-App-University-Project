<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailed_upload"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.org.GrafFinder.uploadsManager.DetailedUploadActivity"
    android:layout_width="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#EEEEEE"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <Button
            android:text="X"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/exit"
            android:background="@android:color/transparent"/>
        <TextView
            android:text="TextView"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/tags"
            android:layout_alignTop="@+id/uploadImg"
            android:layout_toEndOf="@+id/uploadImg" />
        <ImageView
            android:layout_width="170dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/cast_album_art_placeholder"
            android:id="@+id/uploadImg"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="TextView"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:layout_above="@+id/uploadbttn"
            android:layout_alignEnd="@+id/tags"
            android:layout_toEndOf="@+id/uploadImg" />

        <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadbttn"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/uploadImg" />

    </RelativeLayout>
</RelativeLayout>